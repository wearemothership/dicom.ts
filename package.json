{
  "name": "dicom.ts",
  "version": "1.0.5",
  "description": "A small, fast, typescript DICOM renderer",
  "author": "wearemothership",
  "keywords": [
    "dicom",
    "parser",
    "renderer",
    "canvas",
    "typescript",
    "glsl",
    "image",
    "jpeg",
    "jpeg2000",
    "jpeglossless",
    "jpegls",
    "RLE"
  ],
  "email": "nick@wearemothership.com",
  "license": "MIT",
  "repository": "wearemothership/dicom.ts",
  "homepage": "https://wearemothership.github.io/dicom.ts",
  "main": "dist/index.js",
  "module": "dist/index.modern.mjs",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "browser": "./dist/browser.js",
    "default": "./dist/index.modern.mjs"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "rimraf dist && microbundle --no-compress -f modern,cjs",
    "postbuild": "browserify -s dicom.ts -p esmify ./dist/index.modern.mjs > ./dist/browser.js",
    "start": "rimraf dist && microbundle watch --no-compress -f modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "jest .",
    "test:coverage": "jest . --coverage",
    "predeploy": "cd example-vs-cornerstone && npm install && SKIP_PREFLIGHT_CHECK=true npm run build",
    "deploy": "gh-pages -d example-vs-cornerstone/build"
  },
  "dependencies": {
    "@types/node": "^17.0.36",
    "@wearemothership/dicom-character-set": "^1.0.4-opt.1",
    "browserify-fs": "^1.0.0",
    "jpeg-lossless-decoder-js": "^2.0.4",
    "pako": "^2.0.4",
    "raw.macro": "^0.4.2",
    "sha1": "^1.1.1",
    "twgl.js": "git+https://github.com/wearemothership/twgl.js#v4.19.1",
    "typescript": "^4.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.17.12",
    "@babel/plugin-proposal-optional-chaining": "^7.17.12",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
    "@types/sha1": "^1.1.3",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "babel-jest": "^28.1.0",
    "babel-plugin-macros": "^3.1.0",
    "blob-util": "^2.0.2",
    "brfs": "^2.0.2",
    "browserify": "^17.0.0",
    "canvas": "^2.9.1",
    "cross-env": "^7.0.3",
    "dicom-test-files": "github:wearemothership/dicom-test-files#v1.0.1",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.4.5",
    "esmify": "^2.1.1",
    "gh-pages": "^4.0.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "jest-image-snapshot": "^4.5.1",
    "microbundle": "^0.15.0",
    "node-canvas-webgl": "git+https://github.com/wearemothership/node-canvas-webgl.git#0.2.7-twgl",
    "node-fetch": "^2.6.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2"
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "testPathIgnorePatterns": [
      "example",
      "example-vs-cornerstone"
    ]
  },
  "files": [
    "dist"
  ]
}
